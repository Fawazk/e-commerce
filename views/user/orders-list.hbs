<section>
    <div class="container">
        <div class="d-flex justify-content-end align-items-end mt-3">
            <a href="/admin/add-product" class="btn btn-outline-success" href="">Add Products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th class="col-2">Date</th>
                    <th class="col-2">Address</th>
                    <th class="col-2">Phone</th>
                    <th class="col-2">paymentMethod</th>
                    <th class="col-1">Amount</th>
                    <th class="col-1">status</th>
                    <th class="col-2">View Products</th>
                </tr>
            </thead>
            <tbody>
                {{#each orderList}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.status}}</td>
                    <td><a class="btn btn-success" href="/view-order-products/{{this._id}}">View Products</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

