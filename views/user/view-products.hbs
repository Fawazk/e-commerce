<section>
    <div class="container mt-4">

        <div class="row">
            {{#each products}}
            <div class="col-md-3">
                <div class="card m-2" style="width: 15rem; height:25rem;">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <bold>{{this.price}}</bold>
                        <a class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</section>

